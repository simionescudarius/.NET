@{
    ViewData["Title"] = "Imprumuta carte";
}

<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle" style="width: 100%; margin-left: 0%;">
        <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author first name</th>
                    <th>Author last name</th>
                    <th>Gender</th>
                    <th style="text-align: center">Action</th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.AvailableBooks) {
                <tr>
                    <td>@item.carteId</td>
                    <td>@item.titlu</td>
                    <td>@item.AutorDto.nume</td>
                    <td>@item.AutorDto.prenume</td>
                    <td>@item.GenDto.descriere</td>
                    <td class="text-center"><a class='btn btn-info btn-xs' href="#" data-toggle="modal" data-target="#loanBookPopUp" onclick="setSelectedBookId(@item.carteId)"><span class="glyphicon glyphicon-edit"></span> Loan</a></td>
                </tr>
            }
        </table>
    </div>
</div>

<div id="loanBookPopUp" class="modal fade" role="dialog">
    <div class="modal-dialog" style="height: 27%; margin-top: 15%;">

        <!-- Modal content-->
        <div class="modal-content" style="height: 100%">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="text-align: center">Loan book</h4>
            </div>

            <div class="modal-body" style="height: 38%">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="title">Reader Email:</label>
                    <div class="col-md-5">
                        <input id="readerEmailLoan" name="readerEmailLoan" type="text" placeholder="email" class="form-control input-md" required="">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-success" data-dismiss="modal" onclick="loanBook(selectedBookId)">Confirm</button>
                <button type="button" class="btn btn-default btn-warning" data-dismiss="modal" data-toggle="modal" data-target="#registerUserPopup">Register</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>

<div id="registerUserPopup" class="modal fade" role="dialog">
    <div class="modal-dialog" style="height: 50%; margin-top: 7%;">

        <!-- Modal content-->
        <div class="modal-content" style="height: 100%">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="text-align: center">Register user</h4>
            </div>

            <div class="modal-body" style="height: 67%">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="title" style="margin-top: 2%;">First Name:</label>
                    <div class="col-md-5">
                        <input id="readerName" name="readerName" type="text" placeholder="nume" class="form-control input-md" required="" style="margin-top: 3%;">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="title" style="margin-top: 2%;">Last Name:</label>
                    <div class="col-md-5">
                        <input id="lastName" name="lastName" type="text" placeholder="prenume" class="form-control input-md" required="" style="margin-top: 3%;">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="title" style="margin-top: 2%;">Adress:</label>
                    <div class="col-md-5">
                        <input id="adress" name="adress" type="text" placeholder="adresa" class="form-control input-md" required="" style="margin-top: 3%;">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="title" style="margin-top: 2%;">Email:</label>
                    <div class="col-md-5">
                        <input id="readerEmail" name="readerEmail" type="text" placeholder="email" class="form-control input-md" required="" style="margin-top: 3%;">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-success" data-dismiss="modal" onclick="registerUser()">Register</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>
